{
  "extends": "@tsconfig/node-lts-strictest-esm",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "plugins": [{ "name": "next" }]
}
